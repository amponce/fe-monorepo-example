{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/lib",
    "declaration": true,
    "paths": {}
  },
  "exclude": [
    "**/*.spec.ts",
    "__coverage__",
    "__screenshots__"
  ],
  "angularCompilerOptions": {
    "enableIvy": false,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  }
}
